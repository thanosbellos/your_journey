
  <tr class="template-upload fade in">
    <td class="col-md-1">
      <span class="preview">
        <% if trail.photos.empty? %>
          <%= image_tag 'default_route_thumb.jpg' %>
        <%else %>
          <%= image_tag trail.photos.first.image.thumb.url %>
        <%end %>
      </span>
    </td>
    <td class="col-md-8">
      <h5>Trail Info </h5>
      <ul>
        <li> Trail Name: <%= trail.name %> </li>
        <li>Starting Point: <%= trail.start_point %></li>
        <li>Finish Point: <%= trail.end_point %></li>
        <li>Length: <%= trail.length %></li>
      </ul>
    </td>


    <td class="col-md-2 col-sm-2">

      <div>

          <h5> Average Rating </h5>
          <% if trail.rate_average_without_dimension.avg.nil? %>
            :( Noone has rated this trail yet
          <%else %>
            <%= rating_for trail , nil,disable_after_rate:false ,  imdb_avg: true,readonly: true%>
          <% end %>
          <%= link_to "See Route" , user_trail_path(trail.users.first, trail), :class=> "btn btn-primary"%>
      </div>
    </td>
  </tr>




