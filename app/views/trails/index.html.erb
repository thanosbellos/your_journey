<p id="notice"><%= notice %></p>

<h1>Listing Trails</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>Destination</th>
      <th>Travel by</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.start %></td>
        <td><%= trail.destination %></td>
        <td><%= trail.travel_by %></td>
        <td><%= trail.rating %></td>
        <td><%= link_to 'Show', trail %></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

