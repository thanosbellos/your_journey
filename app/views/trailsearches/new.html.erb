<style>
.ui-button {
  background:#3887BE;
  color:#FFF;
  display:block;
  position:absolute;
  bottom:20%;left:50%;
  width:160px;
  margin:-20px 0 0 -80px;
  z-index:100;
  text-align:center;
  padding:10px;
  border:1px solid rgba(0,0,0,0.4);
  border-radius:3px;
  }
  .ui-button:hover {
    background:#3074a4;
    color:#fff;
    }
</style>
<div id='map'></div>
<a href='#' id='geolocate' class='ui-button'>Find me</a>

<div>
  <%= form_tag({controller: "trailsearches" , action: "search"} , method: "get") do  %>
    <%= label_tag(:radius , "radius:") %>
    <%= number_field_tag 'radius', '1' , min:500 ,step: 2000 %>
    <%= label_tag(:location , "location:") %>
    <%= text_field_tag(:location) %>
    <%= submit_tag("search") %>
  <% end %>
</div>
